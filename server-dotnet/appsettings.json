{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=bugtracker;Username=bugtracker_user;Password=bugtracker_password"
  },
  "JWT": {
    "SecretKey": "your-super-secret-jwt-key-change-in-production",
    "Issuer": "bugtracker-api",
    "Audience": "bugtracker-client",
    "ExpiryInMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/bugtracker-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*"
} 